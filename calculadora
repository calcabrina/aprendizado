    <script>

        var primeiroNumero = Number.parseFloat(prompt('Primeiro algarismo: '))
        var operador = prompt('Operador: ')
        var segundoNumero = Number.parseFloat(prompt('Segundo algarismo: '))
        //var resultado = Number.parseFloat(primeiroNumero, operador, segundoNumero)
        var resultado = (`${primeiroNumero}${operador}${segundoNumero}`)

        document.write(`A operação foi de <strong>${operador} </strong><br/> <strong> ${primeiroNumero} ${operador} ${segundoNumero} = ${resultado}</strong>`)

    </script>


